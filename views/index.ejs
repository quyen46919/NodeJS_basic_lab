<!DOCTYPE html>
<html>
  <head>
    <title>Tin tức hôm nay</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <% include components/header %>
    <div
      class="w-7xl max-w-7xl h-auto flex item-center justify-start m-auto mt-8 mb-10 gap-10"
    >
      <!-- left column -->
      <div class="w-full md:w-3/4 h-auto">
        <!-- main news -->
        <div
          class="w-full h-auto mb-4 border-b-[1px] border-gray-200 border-solid"
        >
        <%- include('components/new_card', { showImage: true, news: news[0] }); %>
        </div>
        <!-- end main news -->
        <!-- sub news -->
        <div
          class="w-full h-auto grid grid-cols-1 md:grid-cols-2 gap-x-10 gap-y-0"
        >
          <% for(var i = 1; i < 7; i++) {%> <%- include('components/new_card', {
          showImage: true, news: news[i] }); %> <% } %>
        </div>
        <!-- end sub news -->
      </div>
      <!-- end left column -->
      <!-- right column -->
      <div class="w-1/4 h-auto hidden md:flex flex-col">
        <% for(var i = 8; i < news.length; i++) {%> 
          <%- include('components/new_card', { showImage: false, news: news[i] }); %>
        <% } %>
      </div>
      <!-- end right column -->
    </div>
  </body>
</html>
